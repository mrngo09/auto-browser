{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true, // Enables metadata emission for decorators
    "experimentalDecorators": true // Enables experimental decorator support
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
